<Window x:Class="WpfTiaProject.View.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTiaProject.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="ProgressWindow" Height="125" Width="300">
    <StackPanel>
        <StackPanel Margin="10">
            <ProgressBar Height="20" Minimum="0" Maximum="100" Margin="0,0,0,10" IsIndeterminate="True"/>
            <Button Content="Отмена" Command="{Binding Cancel}" HorizontalAlignment="Center"/>
        </StackPanel>
        <StatusBar Height="20" VerticalAlignment="Bottom">
            <StatusBarItem Height="20">
                <TextBlock Text="{Binding Path=ThreadId, StringFormat=Thread Id : {0}}" VerticalAlignment="Center" FontSize="10"/>
            </StatusBarItem>
        </StatusBar>
    </StackPanel>
</Window>
