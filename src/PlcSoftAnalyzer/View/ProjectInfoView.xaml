<UserControl x:Class="PlcSoftAnalyzer.View.ProjectInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlcSoftAnalyzer.View"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="320">
    <Grid>
        <GroupBox Padding="10" MinWidth="320" Header="Project information">
            <StackPanel>
                <StackPanel Orientation="Horizontal" MinHeight="20">
                    <TextBlock Text="Project name: " Style="{StaticResource InfoText}"/>
                    <TextBlock Text="{Binding Name}" Style="{StaticResource ProjectInfo}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" MinHeight="20">
                    <TextBlock Text="Creation time: " Style="{StaticResource InfoText}"/>
                    <TextBlock Text="{Binding CreationTime}" Style="{StaticResource ProjectInfo}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" MinHeight="20">
                    <TextBlock Text="Last change: " Style="{StaticResource InfoText}"/>
                    <TextBlock Text="{Binding LastChange}" Style="{StaticResource ProjectInfo}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" MinHeight="20">
                    <TextBlock Text="Version: " Style="{StaticResource InfoText}"/>
                    <TextBlock Text="{Binding Version}" Style="{StaticResource ProjectInfo}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" MinHeight="20">
                    <TextBlock Text="Comment: " Style="{StaticResource InfoText}"/>
                    <TextBlock Text="{Binding Comment}" Style="{StaticResource ProjectInfo}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" MinHeight="20">
                    <TextBlock Text="CPU: " Style="{StaticResource InfoText}"/>
                    <TextBlock Text="{Binding CPU}" Style="{StaticResource ProjectInfo}"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
